CREATE DATABASE HANDY;

CREATE TABLE LOGS (
ID INT(10) unsigned NOT NULL AUTO_INCREMENT,
HORA DATETIME NOT NULL,
IP VARCHAR(15) NOT NULL,
LOGIN VARCHAR(20) NOT NULL,
MENSAGEM text COLLATE latin1_general_ci NOT NULL,
PRIMARY KEY (ID),
KEY HORA (HORA)
) ENGINE=MyISAM DEFAULT CHARSET=latin1 COLLATE=latin1_general_ci AUTO_INCREMENT=1 ;

CREATE TABLE PRESTADOR (

ID            		INT           NOT NULL  AUTO_INCREMENT,
NOME          		VARCHAR(50)   NOT NULL,
TELEFONE     		VARCHAR(20)   NOT NULL,
CELULAR             VARCHAR(14)   NOT NULL,
CPF                 VARCHAR(14)   NOT NULL,
PROFISSAO           VARCHAR(24)   NOT NULL,
ESTADO              VARCHAR(24)   NOT NULL,
CIDADE              VARCHAR(35)   NOT NULL,
GENERO              VARCHAR(18)   NOT NULL,
CIDADEATENDE        VARCHAR(35)   NOT NULL,
PLANO               VARCHAR(15)   NOT NULL,
LOGIN               VARCHAR(25)   NULL,
SENHA               VARCHAR(20)   NULL,
STATUS              INT           NULL,

PRIMARY KEY (ID));

CREATE TABLE TOMADOR (

ID            		INT           NOT NULL  AUTO_INCREMENT,
NOME          		VARCHAR(50)   NOT NULL,
TELEFONE     		VARCHAR(20)   NOT NULL,
CELULAR             VARCHAR(14)   NOT NULL,
CPF                 VARCHAR(14)   NOT NULL,
ESTADO              VARCHAR(24)   NOT NULL,
CIDADE              VARCHAR(35)   NOT NULL,
GENERO              VARCHAR(20)   NOT NULL,
LOGIN               VARCHAR(20)   NULL,
SENHA               VARCHAR(25)   NULL,
STATUS              INT           NULL,

PRIMARY KEY (ID));


